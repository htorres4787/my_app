<div>
  <div>
    <h1>
      List of all restaurants
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a restaurant
    </h2>

    <form action="/insert_restaurant" method="post">
      <div>
        <label for="food_id_box">
          Food
        </label>

        <input type="text" id="food_id_box" name="query_food_id">
      </div>

      <div>
        <label for="name_box">
          Thoughts
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <button>
        Create restaurant
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
          <%# Look into how to hide this %>
        </th>

        <th>
          Food
        </th>

        <th>
          Thoughts
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_restaurants.each do |a_restaurant| %>
      <tr>
        <td>
          <%= a_restaurant.id %>
        </td>

        <td>
          <%= a_restaurant.food_id %>
        </td>

        <td>
          <%= a_restaurant.name %>
        </td>

        <td>
          <%= time_ago_in_words(a_restaurant.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_restaurant.updated_at) %> ago
        </td>

        <td>
          <a href="/restaurants/<%= a_restaurant.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
